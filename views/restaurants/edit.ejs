<%- include('../partials/header') %>
    <h2>
        <%=title%>
    </h2>
    <form id="new-form" action="/restaurants/<%= restaurant.id%>?_method=PUT" method="POST">

        <label>Name:</label>
        <input type="text" name="name" value="<%=restaurant.name%>">

        <label>Description:</label>
        <input type="text" name="description" value="<%=restaurant.description%>">

        <label>Address:</label>
        <input type="text" name="address" value="<%=restaurant.adrress%>">

        <label>Phone Number:</label>
        <input id="num" type="number" name="phoneNumber" value="<%=restaurant.phoneNumber%>">

        <label>Ethnic</label>
        <select name="ethnic" value="restaurant.ethnic">
            <option value="African">African</option>
            <option value="Asian">Asian</option>
            <option value="Australian">Australian</option>
            <option value="European">European</option>
            <option value="North American">North American</option>
            <option value="South American">South American</option>
        </select> <br>
        <button type="submit">Finish</button>
    </form>

    <%- include('../partials/footer') %>
